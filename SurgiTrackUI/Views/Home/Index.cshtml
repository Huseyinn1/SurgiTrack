@{
    ViewBag.Title = "Chart Page";
}


@section scripts {
    <script>
        var chartProfileVisitData = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.ChartProfileVisitData));
        var chartVisitorsProfileData = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.ChartVisitorsProfileData));

        // JavaScript dosyanızda verileri güncelle
        optionsProfileVisit.series[0].data = chartProfileVisitData.sales;
        optionsProfileVisit.xaxis.categories = chartProfileVisitData.categories;
        chartProfileVisit.updateOptions(optionsProfileVisit);

        optionsVisitorsProfile.series = chartVisitorsProfileData.series;
        optionsVisitorsProfile.labels = chartVisitorsProfileData.labels;
        optionsVisitorsProfile.colors = chartVisitorsProfileData.colors;
        chartVisitorsProfile.updateOptions(optionsVisitorsProfile);
    </script>
}
